<%= form_for(@user) do |f| %>
			
			<%= f.text_field :first_name %>

			<%= f.text_field :last_name %>

			<%= f.email_field :email %>

			<%= f.password_field :password %>

			<%= f.password_field :password_confirmation %>

			<%= f.submit yield(:button_text), class: 'expanded button' %>
			
		<% end %>